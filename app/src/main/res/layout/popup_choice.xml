<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/lv_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_triangle"
        android:background="@drawable/border_blue1_bg_round_white1_5dp"
        android:divider="@color/blue1"
        android:dividerHeight="1px"
        android:listSelector="@color/blue4"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:scrollbars="none"/>

    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="-14px"
        android:layout_marginStart="38dp"
        android:contentDescription="@string/app_name"
        android:rotation="270"
        android:src="@mipmap/iv_baidu_map_model_choice_triangle"/>
</RelativeLayout>